<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Velvest.Views.MainWindow"
        Title="Velvest" Width="1150" Height="850"
        Background="#0D0D14">

    <Window.Styles>
        <!-- список -->
        <Style Selector="ListBoxItem">
            <Setter Property="Padding" Value="10,4"/>
            <Setter Property="CornerRadius" Value="4"/>
        </Style>
        <Style Selector="ListBoxItem:pointerover">
            <Setter Property="Background" Value="#22F64A8A"/>
        </Style>
        <Style Selector="ListBoxItem:selected">
            <Setter Property="Background" Value="#33F64A8A"/>
        </Style>
        <!-- кнопки -->
        <Style Selector="Button">
            <Setter Property="CornerRadius" Value="7"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
    </Window.Styles>

    <Grid ColumnDefinitions="*, 270" RowDefinitions="Auto, 130, Auto, Auto, *, 155, Auto"
          Margin="24,20,24,20">

        <!-- шапка -->
        <StackPanel Grid.Row="0" Grid.ColumnSpan="2" Orientation="Horizontal"
                    Spacing="14" Margin="0,0,0,20">
            <TextBlock Text="velvest" Foreground="#F64A8A" FontSize="16"
                       FontWeight="SemiBold" VerticalAlignment="Center"/>
            <TextBlock x:Name="StatusText" Text="ready" Foreground="#F64A8A"
                       FontSize="12" Opacity="0.35" VerticalAlignment="Center"/>
        </StackPanel>

        <!-- сетевые интерфейсы -->
        <ListBox Grid.Row="1" Grid.ColumnSpan="2" x:Name="InterfaceList"
                 Background="#16161E" Foreground="#d4b8c8"
                 BorderBrush="#2a1f2e" BorderThickness="1"
                 CornerRadius="10" FontSize="12" Padding="8"/>

        <!-- счётчики пакетов -->
        <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal"
                    HorizontalAlignment="Center" Spacing="48" Margin="0,18,0,0">
            <StackPanel HorizontalAlignment="Center">
                <TextBlock Text="packets" Foreground="#F64A8A" Opacity="0.45"
                           FontSize="11" HorizontalAlignment="Center"/>
                <TextBlock x:Name="TotalPacketsText" Text="0" Foreground="#d4a8c0"
                           FontSize="30" FontWeight="Bold" HorizontalAlignment="Center"/>
            </StackPanel>
            <StackPanel HorizontalAlignment="Center">
                <TextBlock Text="tcp" Foreground="#F64A8A" Opacity="0.45"
                           FontSize="11" HorizontalAlignment="Center"/>
                <TextBlock x:Name="TcpCountText" Text="0" Foreground="#d4a8c0"
                           FontSize="30" FontWeight="Bold" HorizontalAlignment="Center"/>
            </StackPanel>
            <StackPanel HorizontalAlignment="Center">
                <TextBlock Text="udp" Foreground="#F64A8A" Opacity="0.45"
                           FontSize="11" HorizontalAlignment="Center"/>
                <TextBlock x:Name="UdpCountText" Text="0" Foreground="#d4a8c0"
                           FontSize="30" FontWeight="Bold" HorizontalAlignment="Center"/>
            </StackPanel>
        </StackPanel>

        <!-- поиск -->
        <TextBox Grid.Row="3" Grid.ColumnSpan="2" x:Name="FilterInput"
                 Watermark="filter..." Margin="0,14,0,0"
                 Background="#16161E" Foreground="#F0E0FF"
                 BorderBrush="#2a1f2e" BorderThickness="1"
                 CornerRadius="8" Padding="12,8"
                 CaretBrush="#F64A8A" FontSize="13"/>

        <!-- лог -->
        <ListBox Grid.Row="4" Grid.Column="0" x:Name="PacketLog"
                 Margin="0,12,12,0" Background="#0E0E16" Foreground="#ddc8d8"
                 BorderBrush="#2a1f2e" BorderThickness="1"
                 CornerRadius="10" FontSize="12"
                 SelectionChanged="OnPacketSelected" Padding="4"/>

        <!-- топ -->
        <StackPanel Grid.Row="4" Grid.Column="1" Margin="0,12,0,0">
            <TextBlock Text="top sources" Foreground="#F64A8A" Opacity="0.5"
                       FontSize="11" Margin="2,0,0,8"/>
            <ListBox x:Name="TopSourcesList"
                     Background="#13131B" Foreground="#ddc8d8"
                     BorderBrush="#2a1f2e" BorderThickness="1"
                     CornerRadius="10" FontSize="12" Padding="4"/>
        </StackPanel>

        <!-- детали -->
        <Border Grid.Row="5" Grid.ColumnSpan="2" Margin="0,12,0,0"
                Background="#0E0E16" BorderBrush="#2a1f2e" BorderThickness="1"
                CornerRadius="10">
            <ScrollViewer Padding="4">
                <TextBlock x:Name="DetailsText" Text="select a packet to inspect"
                           Margin="12,10" Foreground="#c8b0c0" Opacity="0.7"
                           FontSize="12" TextWrapping="Wrap"/>
            </ScrollViewer>
        </Border>

        <!-- управление -->
        <StackPanel Grid.Row="6" Grid.ColumnSpan="2" Orientation="Horizontal"
                    Spacing="8" Margin="0,14,0,0">
            <Button Content="scan" Click="OnScanClick" Padding="20,8"
                    Background="#F64A8A" Foreground="#0D0D12"
                    FontSize="13" FontWeight="SemiBold"/>
            <Button Content="start" Click="OnStartCaptureClick" Padding="20,8"
                    Background="#F64A8A" Foreground="#0D0D12"
                    FontSize="13" FontWeight="SemiBold"/>
            <Button Content="stop" Click="OnStopCaptureClick" Padding="20,8"
                    Background="#1e1a24" Foreground="#F64A8A"
                    FontSize="13" BorderThickness="1" BorderBrush="#2a1f2e"
                    CornerRadius="7"/>
            <Button Content="clear" Click="OnClearLogClick" Padding="20,8"
                    Background="#1e1a24" Foreground="#F64A8A"
                    FontSize="13" BorderThickness="1" BorderBrush="#2a1f2e"
                    CornerRadius="7"/>
        </StackPanel>

    </Grid>
</Window>